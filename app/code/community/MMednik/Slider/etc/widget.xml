<?xml version="1.0"?>
<widgets>
    <slider type="mmednik_slider/slider">
        <name>Slider</name>
        <description>MMednik Slider, a Magento widget for sliders managment</description>
        <parameters>
            <!-- global configuration -->
            <id>
                <required>1</required>
                <visible>1</visible>
                <label>Unique Identifier</label>
                <type>text</type>
                <value>my-slider</value>
            </id>
            
            <width>
                <required>1</required>
                <visible>1</visible>
                <label>Width</label>
                <type>text</type>
                <value>940</value>
            </width>
            
            <height>
                <required>1</required>
                <visible>1</visible>
                <label>Height</label>
                <type>text</type>
                <value>400</value>
            </height>
            
            <animtype>
                <required>0</required>
                <visible>1</visible>
                <label>Type of animation</label>
                <type>select</type>
                <values>
                    <fade>
                        <label>Fade</label>
                        <value>fade</value>
                    </fade>
                    <slide>
                        <label>Slide</label>
                        <value>slide</value>
                    </slide>
                </values>
            </animtype>
            
            <animduration>
                <required>0</required>
                <visible>1</visible>
                <label>Duration of animation (ms)</label>
                <type>text</type>
                <value>450</value>
            </animduration>
            
            <animspeed>
                <required>0</required>
                <visible>1</visible>
                <label>Speed of animation (ms)</label>
                <type>text</type>
                <value>4000</value>
            </animspeed>
            
            <automatic>
                <required>0</required>
                <visible>1</visible>
                <label>Automatic animation</label>
                <type>select</type>
                <values>
                    <true>
                        <label>Yes</label>
                        <value>true</value>
                    </true>
                    <false>
                        <label>No</label>
                        <value>false</value>
                    </false>
                </values>
            </automatic>
            
            <showcontrols>
                <required>0</required>
                <visible>1</visible>
                <label>Show "Next/Prev" controls</label>
                <type>select</type>
                <values>
                    <true>
                        <label>Yes</label>
                        <value>true</value>
                    </true>
                    <false>
                        <label>No</label>
                        <value>false</value>
                    </false>
                </values>
            </showcontrols>
            
            <centercontrols>
                <required>0</required>
                <visible>1</visible>
                <label>Center "Next/Prev" controls verically</label>
                <type>select</type>
                <values>
                    <true>
                        <label>Yes</label>
                        <value>true</value>
                    </true>
                    <false>
                        <label>No</label>
                        <value>false</value>
                    </false>
                </values>
            </centercontrols>
            
            <nexttext>
                <required>0</required>
                <visible>1</visible>
                <label>Text for "Next" button</label>
                <type>text</type>
                <value>Next</value>
            </nexttext>
            
            <prevtext>
                <required>0</required>
                <visible>1</visible>
                <label>Text for "Prev" button</label>
                <type>text</type>
                <value>Prev</value>
            </prevtext>
            
            <showmarkers>
                <required>0</required>
                <visible>1</visible>
                <label>Individual slide markers</label>
                <type>select</type>
                <values>
                    <true>
                        <label>Yes</label>
                        <value>true</value>
                    </true>
                    <false>
                        <label>No</label>
                        <value>false</value>
                    </false>
                </values>
            </showmarkers>
            
            <centermarkers>
                <required>0</required>
                <visible>1</visible>
                <label>Center markers horizontally</label>
                <type>select</type>
                <values>
                    <true>
                        <label>Yes</label>
                        <value>true</value>
                    </true>
                    <false>
                        <label>No</label>
                        <value>false</value>
                    </false>
                </values>
            </centermarkers>
            
            <keyboardnav>
                <required>0</required>
                <visible>1</visible>
                <label>Enable keyboard navigation</label>
                <type>select</type>
                <values>
                    <true>
                        <label>Yes</label>
                        <value>true</value>
                    </true>
                    <false>
                        <label>No</label>
                        <value>false</value>
                    </false>
                </values>
            </keyboardnav>
            
            <hoverpause>
                <required>0</required>
                <visible>1</visible>
                <label>Pause the slider on hover</label>
                <type>select</type>
                <values>
                    <true>
                        <label>Yes</label>
                        <value>true</value>
                    </true>
                    <false>
                        <label>No</label>
                        <value>false</value>
                    </false>
                </values>
            </hoverpause>
            
            <usecaptions>
                <required>0</required>
                <visible>1</visible>
                <label>Show captions</label>
                <type>select</type>
                <values>
                    <true>
                        <label>Yes</label>
                        <value>true</value>
                    </true>
                    <false>
                        <label>No</label>
                        <value>false</value>
                    </false>
                </values>
            </usecaptions>
            
            <randomstart>
                <required>0</required>
                <visible>1</visible>
                <label>Start slider at random slide</label>
                <type>select</type>
                <values>
                    <false>
                        <label>No</label>
                        <value>false</value>
                    </false>
                    <true>
                        <label>Yes</label>
                        <value>true</value>
                    </true>
                </values>
            </randomstart>
            
            <responsive>
                <required>0</required>
                <visible>1</visible>
                <label>Enable responsive capabilities (beta)</label>
                <type>select</type>
                <values>
                    <true>
                        <label>Yes</label>
                        <value>true</value>
                    </true>
                    <false>
                        <label>No</label>
                        <value>false</value>
                    </false>
                </values>
            </responsive>
            
            <!-- slides -->
            <slide1link>
                <required>0</required>
                <visible>1</visible>
                <label>Slide 1 Link (href)</label>
                <type>text</type>
            </slide1link>
            <slide1alt>
                <required>0</required>
                <visible>1</visible>
                <label>Slide 1 Caption (alt + title)</label>
                <type>text</type>
            </slide1alt>
            <slide1>
                <required>1</required>
                <visible>1</visible>
                <label>Slide 1 Image</label>
                <type>widgetimagechooser/chooser</type>
            </slide1>
            
            <slide2link>
                <required>0</required>
                <visible>1</visible>
                <label>Slide 2 Link (href)</label>
                <type>text</type>
            </slide2link>
            <slide2alt>
                <required>0</required>
                <visible>1</visible>
                <label>Slide 2 Caption (alt + title)</label>
                <type>text</type>
            </slide2alt>
            <slide2>
                <required>0</required>
                <visible>1</visible>
                <label>Slide 2 Image</label>
                <type>widgetimagechooser/chooser</type>
            </slide2>
            
            <slide3link>
                <required>0</required>
